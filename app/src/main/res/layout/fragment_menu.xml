<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/statementTransactionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/statement_transactions"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/statementGroupedTransactionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/statement_grouped_transactions"
            app:layout_constraintTop_toBottomOf="@+id/statementTransactionsButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exchangeTransactionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/exchange_transactions"
            app:layout_constraintTop_toBottomOf="@+id/statementGroupedTransactionsButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exchangeGroupedTransactionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/exchange_grouped_transactions"
            app:layout_constraintTop_toBottomOf="@+id/exchangeTransactionsButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>